types {
    text/plain err out;
}

server {
    listen 8080 default_server;
    listen [::]:8080 default_server;

    root /var/www/html;

    index index.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    location /ci {
        alias /var/www/build;
        autoindex on;
    }
}
